<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluationMauiDiiage.Views.RendezVousList"
             Title="RendezVousList">

    <StackLayout>
        <Label Style="{StaticResource LabelPrincipal}" Text="Bienvenue sur la page des rendez-vous !"/>

        <CollectionView ItemsSource="{Binding RendezVous}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource RendezVousCard}">
                        <StackLayout>
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding ScheduledDate}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
